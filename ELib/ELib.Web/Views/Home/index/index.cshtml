<div class="container" ng-app="elib">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">ELib</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" ng-controller="IndexController as indexCtrl">
                <ul class="nav navbar-nav">
                    <!--<li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>-->
                    <li><a href="/books"><i class="glyphicon glyphicon-book" ></i> Books</a></li>
                    <li><a href="/authors"><i class="glyphicon glyphicon-pencil"></i> Authors</a></li>
                    <li><a href="/publishers"><i class="glyphicon glyphicon-tag"></i> Publishers</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-apple"></i>Genres<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li ng-repeat="genre in indexCtrl.genres"><a href="/books/search?genreId={{genre.Id}}">{{genre.Name}}</a></li>
                        </ul>
                    </li>
                </ul>             
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/help"><i class="glyphicon glyphicon-th-list"></i> API</a></li>
                    <li data-ng-hide="!indexCtrl.authentication.isAuth"><a href="/books/new"><i class="glyphicon glyphicon-file"></i> New Book</a></li>
                    <li data-ng-hide="!indexCtrl.authentication.isAuth"><a href="/profile">Hello <i class="glyphicon glyphicon-user"></i> {{indexCtrl.authentication.userName}}!</a></li>
                    <li data-ng-hide="!indexCtrl.authentication.isAuth"><a href="" data-ng-click="indexCtrl.logOut()"><i class="glyphicon glyphicon-log-out"></i> Logout</a></li>
                    <li data-ng-hide="indexCtrl.authentication.isAuth"> <a href="/login"><i class="glyphicon glyphicon-log-in"></i> Sign In</a></li>
                    <li data-ng-hide="indexCtrl.authentication.isAuth"> <a href="/registration"><i class="glyphicon glyphicon-asterisk"></i> Sign Up</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" role="search" ng-controller="SearchController as search">
                    <div class="form-group" style="margin-bottom:0">
                        <div class="col-sm-3">
                            @*<label for="searchSelector" class="control-label">
                                    Search:
                                </label>*@
                            <select id="searchSelector" class="form-control input-sm" ng-model="search.type">
                                <option value="books" selected>Books</option>
                                <option value="authors">Authors</option>
                                <option value="publishers">Publishers</option>
                            </select>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" ng-model="search.query" class="form-control input-sm" placeholder="Search">
                        </div>
                        <div class="col-sm-1">
                            <button type="submit" button ng-click="search.sendRequest()" class="btn btn-sm btn-default" style="padding-left:20px;padding-right:20px">
                                
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row row-bottom-buffer">
        <aside class="col-md-3" ng-controller="MenuController as menuCtrl "><ng-include src="menuCtrl.Url"></ng-include></aside>
        <ng-view></ng-view>
</div>
    <div class="row ">
        <div class="container-fluid">
            <div class="col-md-12 bg-success">
                Footer
            </div>
        </div>
    </div>
</div>